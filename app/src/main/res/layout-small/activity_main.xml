<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="90dp"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="477dp"
        android:layout_height="587dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="-100dp"
        app:layout_constraintTop_toBottomOf="@+id/alfoda"
        app:srcCompat="@drawable/bottum_left" />

    <ImageButton
        android:id="@+id/languagebtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@color/white"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/language" />

    <TextView
        android:id="@+id/alfoda"
        android:layout_width="208dp"
        android:layout_height="62dp"
        android:layout_below="@+id/logo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="102dp"
        android:fontFamily="@font/akaya_telivigala"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/green"
        android:textSize="50sp" />


    <ImageButton
        android:id="@+id/scanbtn"
        android:layout_width="127dp"
        android:layout_height="122dp"
        android:layout_below="@id/scantext"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="19dp"
        android:backgroundTint="@color/green"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/scan" />

    <TextView
        android:id="@+id/scantext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alfoda"
        android:layout_alignParentStart="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="200dp"
        android:text="@string/scan"
        android:textColor="@color/bege"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/searchtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alfoda"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="55dp"
        android:text="@string/search"
        android:textColor="@color/green"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/searchbtn"
        android:layout_width="127dp"
        android:layout_height="122dp"
        android:layout_below="@id/scantext"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="29dp"
        android:backgroundTint="@color/white"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/search" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alfoda"

        android:layout_marginTop="270dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/searchbtn"
        android:text="@string/or"
        android:textColor="@color/green"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="@color/green"
        android:text="@string/contact_us"
        android:textColor="@color/bege" />

    <Button
        android:id="@+id/about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="@color/green"
        android:text="@string/about_us"
        android:textColor="@color/bege" />


</RelativeLayout>